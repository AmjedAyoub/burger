
<div class="container-fluid">
<div class="row head">
  <h1>Eat Da Burger!</h1>
</div>
<div class="row head">
  <img src="http://clipart-library.com/img1/1241880.png">
</div>
<div class="row">
  <div class="col-sm-6">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
     <li>
        <p>
        {{this.id}}. {{this.burger_name}}
        <button data-burgerid="{{this.id}}" class="devoured">Devoured it!</button>
        </p>
        </li>
    {{/unless}}
  {{/each}}
</ul>
  </div>
  <div class="col-sm-6">
    <ul>
  {{#each burgers}}
    {{#if devoured}}
     <li>
        <p>
        {{this.id}}. {{this.burger_name}}
        </p>
        </li>
    {{/if}}
  {{/each}}
</ul>
  </div>
</div>
<div class="row add">
  <h2>Add a Burger</h2></div>
<div class="row add">
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label><br>
    <input type="text" id="br" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>




